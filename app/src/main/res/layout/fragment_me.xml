<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_logo"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_ttf_sign"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/ttf_sign"
        android:textColor="@color/select_text_white_color"
        android:textSize="22sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_title"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp">


            <RelativeLayout
                android:id="@+id/rl_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_select"
                android:gravity="center_vertical"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/img_logo_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_avatar"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_ttf_vip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ttf_vip"
                            android:textColor="@color/color_logo"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/tv_vip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="升级为会员"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_vip_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:visibility="gone" />


                </LinearLayout>


            </RelativeLayout>

            <View style="@style/view_line"></View>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/tv_all_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0\n今日累计" />


                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/color_gray1"
                    android:visibility="gone"></View>

                <TextView
                    android:id="@+id/tv_save_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0\n保存条数"
                    android:visibility="gone" />


                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/color_gray1"></View>

                <TextView
                    android:id="@+id/tv_integral_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0\n积分" />

            </LinearLayout>

            <View style="@style/view_line"></View>


            <RelativeLayout
                android:id="@+id/rl_wallet"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_select"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_ttf_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/ttf_money"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_ttf_wallet"
                    android:text="我的钱包"
                    android:textColor="@color/color_text" />

                <TextView
                    android:id="@+id/tv_ttf_wallet_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ttf_right"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />


            </RelativeLayout>

            <View style="@style/view_line"></View>


            <RelativeLayout
                android:id="@+id/rl_trading"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/item_select"

                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_ttf_trading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/ttf_trading"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_trading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_ttf_trading"
                    android:text="我的交易"
                    android:textColor="@color/color_text" />

                <TextView
                    android:id="@+id/tv_ttf_trading_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ttf_right"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />


            </RelativeLayout>

            <View style="@style/view_line"></View>

            <RelativeLayout

                android:id="@+id/rl_sms"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/item_select"

                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_ttf_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/ttf_sms"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_ttf_sms"
                    android:text="群发短信"
                    android:textColor="@color/color_text" />

                <TextView
                    android:id="@+id/tv_ttf_sms_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ttf_right"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View style="@style/view_line"></View>

            <RelativeLayout
                android:id="@+id/rl_service"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/item_select"

                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_ttf_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/ttf_service"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_ttf_service"
                    android:text="联系客服"
                    android:textColor="@color/color_text" />

                <TextView
                    android:id="@+id/tv_ttf_service_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ttf_right"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />


            </RelativeLayout>

            <View style="@style/view_line"></View>

            <RelativeLayout

                android:id="@+id/rl_feedback"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/item_select"

                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_ttf_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/ttf_feedback"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_ttf_feedback"
                    android:text="意见反馈"
                    android:textColor="@color/color_text" />

                <TextView
                    android:id="@+id/tv_ttf_feedback_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ttf_right"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View style="@style/view_line"></View>

            <RelativeLayout

                android:id="@+id/rl_setting"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/item_select"

                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_ttf_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/ttf_setting"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_ttf_setting"
                    android:text="设置"
                    android:textColor="@color/color_text" />

                <TextView
                    android:id="@+id/tv_ttf_setting_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ttf_right"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View style="@style/view_line"></View>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
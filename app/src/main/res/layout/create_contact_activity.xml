<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/action_bar"
        layout="@layout/actionbar"></include>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/action_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ttf_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ttf_people"
                android:textColor="@color/color_text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="姓名"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/color_gray1"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            style="@style/view_line"
            android:layout_marginTop="2dp"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ttf_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ttf_phone"
                android:textColor="@color/color_text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="手机"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/color_gray1"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            style="@style/view_line"
            android:layout_marginTop="2dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ttf_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ttf_tel"
                android:textColor="@color/color_text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="固话"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/color_gray1"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            style="@style/view_line"
            android:layout_marginTop="2dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ttf_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ttf_address_detalis"
                android:textColor="@color/color_text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="地址"
                android:maxLines="3"
                android:textColorHint="@color/color_gray1"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            style="@style/view_line"
            android:layout_marginTop="2dp"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ttf_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ttf_note"
                android:textColor="@color/color_text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="备注信息"
                android:maxLines="3"
                android:textColorHint="@color/color_gray1"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            style="@style/view_line"
            android:layout_marginTop="2dp"></View>
    </LinearLayout>


    <com.zmy.diamond.utli.view.loading_button.customViews.CircularProgressButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_info"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/problem_shape"
        android:scaleType="fitCenter"
        android:text="保 存"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:finalCornerAngle="50dp"
        app:initialCornerAngle="0dp"
        app:spinning_bar_color="@android:color/white"
        app:spinning_bar_padding="8dp"
        app:spinning_bar_width="4dp"></com.zmy.diamond.utli.view.loading_button.customViews.CircularProgressButton>


</RelativeLayout>